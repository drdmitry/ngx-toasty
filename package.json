{
  "name": "ngx-toasty",
  "description": "Angular Toasty component shows growl-style alerts and messages for your web app",
  "version": "0.0.0-development",
  "scripts": {
    "test": "karma start",
    "test-watch": "tsc && karma start --no-single-run --auto-watch",
    "commit": "npm run prepublish && npm test && git-cz",
    "prepare": "ngc && npm run build",
    "build": "webpack && cp -rf *.css img bundles/",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cadulis/ngx-toasty.git"
  },
  "keywords": [
    "angular",
    "angular2",
    "toasty",
    "growl"
  ],
  "author": "Sergey Akopkokhyants",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cadulis/ngx-toasty/issues"
  },
  "main": "bundles/index.umd.js",
  "module": "index.js",
  "typings": "index.d.ts",
  "homepage": "https://github.com/cadulis/ngx-toasty",
  "peerDependencies": {
    "@angular/core": ">= 4.0.0"
  },
  "devDependencies": {
    "@angular/animations": "6.1.0",
    "@angular/common": "6.1.0",
    "@angular/compiler": "6.1.0",
    "@angular/compiler-cli": "6.1.0",
    "@angular/core": "6.1.0",
    "@angular/platform-browser": "6.1.0",
    "@angular/platform-browser-dynamic": "6.1.0",
    "@angular/platform-server": "6.1.0",
    "@types/hammerjs": "2.0.35",
    "@types/jasmine": "2.8.2",
    "@types/node": "8.0.53",
    "awesome-typescript-loader": "3.4.0",
    "cash-cp": "0.2.0",
    "codelyzer": "4.4.4",
    "commitizen": "2.10.1",
    "core-js": "2.5.7",
    "cz-conventional-changelog": "2.1.0",
    "istanbul-instrumenter-loader": "3.0.0",
    "jasmine-core": "2.8.0",
    "karma": "3.0.0",
    "karma-chrome-launcher": "2.2.0",
    "karma-coverage": "1.1.2",
    "karma-firefox-launcher": "1.0.1",
    "karma-jasmine": "1.1.0",
    "karma-mocha-reporter": "2.2.5",
    "karma-remap-coverage": "0.1.4",
    "karma-sourcemap-loader": "0.3.7",
    "karma-webpack": "3.0.0",
    "loader-utils": "1.1.0",
    "reflect-metadata": "0.1.12",
    "rxjs": "6.2.2",
    "semantic-release": "^12.0.0",
    "source-map-loader": "0.2.4",
    "ts-helpers": "1.1.2",
    "tslint": "5.11.0",
    "tslint-loader": "3.6.0",
    "typescript": "2.7.2",
    "webpack": "3.8.1",
    "zone.js": "0.8.26"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
